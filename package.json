{
  "name": "qupid-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:web": "pnpm --filter @qupid/web dev",
    "dev:api": "pnpm --filter @qupid/api dev",
    "build": "pnpm build:packages && pnpm build:apps",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:apps": "pnpm --filter './apps/**' build",
    "build:web": "pnpm --filter @qupid/web build",
    "build:api": "pnpm --filter @qupid/api build",
    "preview": "pnpm --filter @qupid/web preview",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "seed:performance": "node scripts/seed-performance-data.js"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "@types/node": "^22.14.0",
    "concurrently": "^9.2.0",
    "dotenv": "^16.6.1",
    "supabase": "^2.34.3",
    "tsx": "^4.20.4",
    "typescript": "~5.8.2"
  }
}