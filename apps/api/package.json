  "dependencies": {
    "@qupid/core": "workspace:*",
    "@supabase/supabase-js": "^2.56.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "openai": "^5.15.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@qupid/config": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.0",
    "typescript": "~5.8.2"
  }
